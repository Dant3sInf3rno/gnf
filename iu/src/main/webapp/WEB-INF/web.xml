<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Sitzungslaufzeit in Minuten -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <!-- Konfiguration für den View-State (Client- oder Serverspeicherung) -->
    <context-param>
        <param-name>javax.faces.STATE_SAVING_METHOD</param-name>
        <param-value>client</param-value> <!-- oder "server" -->
    </context-param>

    <!-- Fehlerseite für ViewExpiredException -->
    <error-page>
        <exception-type>jakarta.faces.application.ViewExpiredException</exception-type>
        <location>/viewExpired.xhtml</location> <!-- Fehlerseite, die bei abgelaufener View angezeigt wird -->
    </error-page>
    
    

</web-app>
